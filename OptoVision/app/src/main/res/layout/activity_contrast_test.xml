<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_contrast_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Back to Tests -->
        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back to Tests"
            android:textSize="14sp"
            android:textColor="#FF9800"
            android:clickable="true"
            android:focusable="true"/>

        <!-- Main Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <!-- Half-Moon Icon -->
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:text="ðŸŒ“"
                    android:textSize="48sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contrast Sensitivity Test"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginTop="16dp"/>

                <!-- Subtitle -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test your ability to see low-contrast patterns"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>

                <!-- Instructions Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/bg_contrast_instructions"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Instructions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="â€¢ Look at striped patterns"
                        android:textSize="14sp"
                        android:textColor="#37474F"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="â€¢ Identify pattern direction"
                        android:textSize="14sp"
                        android:textColor="#37474F"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="â€¢ Cover one eye completely"
                        android:textSize="14sp"
                        android:textColor="#37474F"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="â€¢ Good lighting needed"
                        android:textSize="14sp"
                        android:textColor="#37474F"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="â€¢ 5 patterns per eye"
                        android:textSize="14sp"
                        android:textColor="#37474F"/>

                </LinearLayout>

                <!-- Start Button -->
                <TextView
                    android:id="@+id/btnStartTest"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/button_contrast"
                    android:text="Start with Right Eye"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
