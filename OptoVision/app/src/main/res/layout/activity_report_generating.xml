<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_purple_blue">

    <!-- Central Analysis Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/gradient_purple_blue"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Brain + Pulse Icon -->
        <ImageView
            android:id="@+id/ivAiIcon"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_brain_pulse"
            android:contentDescription="AI Analysis Icon" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Analysis"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="in Progress"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvAnalysisStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analyzing your complete\neye health data..."
            android:textColor="#E0E0FF"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Analysis Progress Steps -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:paddingStart="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <View
                    android:id="@+id/dotVision"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_white" />

                <TextView
                    android:id="@+id/tvCheckVision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Processing vision test results"
                    android:textSize="13sp"
                    android:textColor="#CCCCFF"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <View
                    android:id="@+id/dotGames"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_white" />

                <TextView
                    android:id="@+id/tvCheckGames"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evaluating game performance"
                    android:textSize="13sp"
                    android:textColor="#AAAADD"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <View
                    android:id="@+id/dotHealth"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_white" />

                <TextView
                    android:id="@+id/tvCheckRisk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calculating eye health score"
                    android:textSize="13sp"
                    android:textColor="#9999CC"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:id="@+id/dotReport"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/dot_white" />

                <TextView
                    android:id="@+id/tvCheckReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generating personalized\nrecommendations"
                    android:textSize="13sp"
                    android:textColor="#8888BB"
                    android:layout_marginStart="12dp" />
            </LinearLayout>

        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="24dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_purple" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
