<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_blue_background"
    tools:context=".ForgotPasswordActivity">

    <!-- Top Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <!-- Back to Login Button -->
        <LinearLayout
            android:id="@+id/backToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:padding="8dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Login"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="6dp" />

        </LinearLayout>

        <!-- Eye Logo -->
        <ImageView
            android:id="@+id/ivEyeLogo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_eye_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="26sp"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email to reset password"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:alpha="0.9"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- White Card Form - compact size, NOT extending to bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="120dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_card_all"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- Email Address Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textSize="12sp"
            android:textColor="#4B5563"
            android:layout_marginBottom="6dp" />

        <!-- Email Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_edittext_light"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_email"
                android:layout_marginEnd="10dp" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="your@email.com"
                android:textColorHint="#9CA3AF"
                android:textColor="#1F2937"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:background="@null" />

        </LinearLayout>

        <!-- Send Reset Link Button -->
        <Button
            android:id="@+id/btnSendResetLink"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Send Reset Link"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/rounded_button_dark"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</FrameLayout>
