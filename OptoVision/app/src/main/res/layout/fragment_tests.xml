<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F7FF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_blue_background"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title Row with Progress Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vision Tests"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Progress Badge -->
                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_progress_badge"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="0 of 6\ncompleted"
                    android:textColor="#065F46"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnRetakeTests"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:text="Retake Tests"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_rounded_outline"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- Test Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Distance Vision Test -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDistanceVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸ‘ï¸"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="@drawable/circle_light_blue" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance Vision Test"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test your distance vision"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <!-- Progress Bar -->
                        <ProgressBar
                            android:id="@+id/progressDistanceVision"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_bar_blue" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lockDistanceVision"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle"
                        android:visibility="gone"
                        app:tint="#10B981" />

                    <TextView
                        android:id="@+id/statusDistanceVision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test\n1/6"
                        android:textColor="#3B82F6"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Near Vision Test -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardNearVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸ‘“"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="@drawable/circle_light_purple" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Near Vision Test"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test your near vision"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/progressNearVision"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_bar_purple" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lockNearVision"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        app:tint="#9CA3AF" />

                    <TextView
                        android:id="@+id/statusNearVision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test 2/6"
                        android:textColor="#3B82F6"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Color Vision Test -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardColorVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸŒˆ"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="@drawable/circle_light_yellow" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Color Vision Test"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test color perception"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/progressColorVision"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_bar_yellow" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lockColorVision"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        app:tint="#9CA3AF" />

                    <TextView
                        android:id="@+id/statusColorVision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test 3/6"
                        android:textColor="#3B82F6"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Astigmatism Test -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAstigmatism"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="â—"
                        android:textSize="28sp"
                        android:textColor="#EF4444"
                        android:gravity="center"
                        android:background="@drawable/circle_red_ring" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Astigmatism Test"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Check for astigmatism"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/progressAstigmatism"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_bar_red" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lockAstigmatism"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        app:tint="#9CA3AF" />

                    <TextView
                        android:id="@+id/statusAstigmatism"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test 4/6"
                        android:textColor="#3B82F6"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Contrast Sensitivity Test -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardContrastSensitivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="â—"
                        android:textSize="28sp"
                        android:textColor="#06B6D4"
                        android:gravity="center"
                        android:background="@drawable/circle_light_cyan" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contrast Sensitivity Test"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test contrast sensitivity"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/progressContrast"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_bar_cyan" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lockContrast"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        app:tint="#9CA3AF" />

                    <TextView
                        android:id="@+id/statusContrast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test 5/6"
                        android:textColor="#3B82F6"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Visual Field Test -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardVisualField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸ”"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="@drawable/circle_light_green" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visual Field Test"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test peripheral vision"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:id="@+id/progressVisualField"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_bar_green" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/lockVisualField"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_lock"
                        app:tint="#9CA3AF" />

                    <TextView
                        android:id="@+id/statusVisualField"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test 6/6"
                        android:textColor="#3B82F6"
                        android:textSize="12sp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
