<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileCardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/card_profile_item"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:layout_marginBottom="12dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:background="@drawable/circle_light_blue" />

        <TextView
            android:id="@+id/tvProfileInitials"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="U"
            android:textColor="#3B82F6"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/circle_light_blue" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="14dp">

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="16sp"
            android:textColor="#1F2937"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvProfileAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="13sp"
            android:textColor="#6B7280"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvProfileVision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R: 6/6  â€¢  L: 6/6"
            android:textSize="12sp"
            android:textColor="#9CA3AF"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_chevron_right"
        android:alpha="0.5" />

</LinearLayout>
