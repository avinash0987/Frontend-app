<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_vision_bg">

    <!-- Back Text -->
    <TextView
        android:id="@+id/tvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â†  Back to Tests"
        android:textSize="14sp"
        android:textColor="#E53935"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Main Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/tvBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Checkmark Icon -->
            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="âœ…"
                android:textSize="48sp"
                android:gravity="center"
                android:background="@drawable/circle_coral_bg"/>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Complete!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginTop="24dp"/>

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color Vision Test Results"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginTop="8dp"/>

            <!-- Results Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Right Eye Result -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/bg_result_coral">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘"
                        android:textSize="24sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Right Eye"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvRightEyeScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5/5"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#E53935"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <View
                    android:layout_width="16dp"
                    android:layout_height="1dp"/>

                <!-- Left Eye Result -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="@drawable/bg_result_coral">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘"
                        android:textSize="24sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Left Eye"
                        android:textSize="12sp"
                        android:textColor="#6B7280"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvLeftEyeScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4/5"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#E53935"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Overall Assessment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@drawable/bg_color_level_info">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Assessment"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"/>

                <TextView
                    android:id="@+id/tvAssessment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your color vision appears to be normal."
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

            <!-- Continue Button -->
            <TextView
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_color_vision"
                android:text="Continue to Next Test"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Back to Home Button -->
            <TextView
                android:id="@+id/btnBackToHome"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Back to Tests"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
