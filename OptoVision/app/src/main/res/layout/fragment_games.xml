<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_games_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_green_background"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title Row with Progress Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vision Games"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Progress Badge -->
                <TextView
                    android:id="@+id/tvGamesProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_progress_badge_green"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:text="0 of 4\ncompleted"
                    android:textColor="#065F46"
                    android:textSize="12sp"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Game Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Focus Tracking Game -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFocusTracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸŽ¯"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="@drawable/circle_light_green" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Focus Tracking Game"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Track moving objects"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_bar_green" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game\n1/4"
                        android:textColor="#10B981"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Color Match Game -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardColorMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸŒˆ"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="@drawable/circle_light_yellow" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Color Match Game"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Match colors quickly"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_bar_yellow" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game 2/4"
                        android:textColor="#10B981"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Memory Vision Game -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardMemoryVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸ§©"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="@drawable/circle_light_green" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Memory Vision Game"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remember patterns"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_bar_green" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game 3/4"
                        android:textColor="#10B981"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Eye Coordination Game -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEyeCoordination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:text="ðŸ‘€"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:background="@drawable/circle_light_cyan" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Eye Coordination Game"
                            android:textColor="#1F2937"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coordinate both eyes"
                            android:textColor="#6B7280"
                            android:textSize="12sp" />

                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="8dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="0"
                            android:max="100"
                            android:progressDrawable="@drawable/progress_bar_cyan" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game 4/4"
                        android:textColor="#10B981"
                        android:textSize="12sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
