<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Profile Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_blue_background"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Profile Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <!-- Profile Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp">

                <!-- Profile Picture with Camera Overlay -->
                <FrameLayout
                    android:id="@+id/profileImageContainer"
                    android:layout_width="64dp"
                    android:layout_height="64dp">

                    <!-- Profile Image -->
                    <ImageView
                        android:id="@+id/ivProfileImage"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:background="@drawable/circle_avatar_white" />

                    <!-- Initials Avatar (fallback) -->
                    <TextView
                        android:id="@+id/tvProfileInitials"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:text="U"
                        android:textColor="#3B82F6"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="@drawable/circle_avatar_white" />

                    <!-- Camera Overlay -->
                    <FrameLayout
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/circle_blue_small">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_camera_overlay" />
                    </FrameLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user@example.com"
                        android:textColor="#E0E7FF"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Switch Profile Button -->
                <TextView
                    android:id="@+id/btnSwitchProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Switch"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/rounded_button_outline_white" />
            </LinearLayout>
        </LinearLayout>


        <!-- Menu Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Section: Account -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="20dp"/>

            <!-- Age & Vision Details -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAgeVision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ðŸ“‹"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Age &amp; Vision Details"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#9CA3AF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Edit Profile -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="âœï¸"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Edit Profile"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#9CA3AF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section: Security -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Change Password -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ðŸ”’"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Change Password"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#9CA3AF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <!-- Section: Support -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Help & FAQ -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardHelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â“"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Help &amp; FAQ"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#9CA3AF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- About -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="â„¹ï¸"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="About OptoVision"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#9CA3AF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Logout -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ðŸšª"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Logout"
                        android:textColor="#EF4444"
                        android:textSize="16sp"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="#9CA3AF" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Version Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OptoVision v1.0.0"
                android:textColor="#9CA3AF"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
