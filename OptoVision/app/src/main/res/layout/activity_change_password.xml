<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="#6B7280" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:textColor="#1F2937"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update your account password"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Password Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Lock Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp">

                        <View
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/circle_light_blue" />

                        <TextView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:text="ðŸ”’"
                            android:textSize="28sp"
                            android:gravity="center" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update your account password"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Current Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Password"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:layout_marginTop="24dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/etCurrentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Enter your current password"
                        android:textColorHint="#9CA3AF"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:paddingHorizontal="12dp"
                        android:paddingEnd="48dp"
                        android:inputType="textPassword" />

                    <ImageView
                        android:id="@+id/btnToggleCurrentPassword"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_visibility"
                        app:tint="#9CA3AF" />
                </FrameLayout>

                <!-- New Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Password"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Enter your new password"
                        android:textColorHint="#9CA3AF"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:paddingHorizontal="12dp"
                        android:paddingEnd="48dp"
                        android:inputType="textPassword" />

                    <ImageView
                        android:id="@+id/btnToggleNewPassword"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_visibility"
                        app:tint="#9CA3AF" />
                </FrameLayout>

                <!-- Password Requirements -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password must contain:"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvReq8Chars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ•  At least 8 characters"
                        android:textColor="#EF4444"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvReqUppercase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ•  One uppercase letter"
                        android:textColor="#EF4444"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvReqLowercase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ•  One lowercase letter"
                        android:textColor="#EF4444"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvReqNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ•  One number"
                        android:textColor="#EF4444"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvReqSpecial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ•  One special character"
                        android:textColor="#EF4444"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Confirm New Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm New Password"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="4dp">

                    <EditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/edit_text_background"
                        android:hint="Confirm your new password"
                        android:textColorHint="#9CA3AF"
                        android:textColor="#1F2937"
                        android:textSize="14sp"
                        android:paddingHorizontal="12dp"
                        android:paddingEnd="48dp"
                        android:inputType="textPassword" />

                    <ImageView
                        android:id="@+id/btnToggleConfirmPassword"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_visibility"
                        app:tint="#9CA3AF" />
                </FrameLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Cancel"
                        android:textColor="#6B7280"
                        android:textSize="14sp"
                        android:background="@drawable/button_outline_gray"
                        android:backgroundTint="@null"
                        android:textAllCaps="false" />

                    <Button
                        android:id="@+id/btnUpdatePassword"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Update Password"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:background="@drawable/button_primary"
                        android:backgroundTint="@null"
                        android:textAllCaps="false" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Security Tips Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ðŸ›¡ï¸"
                        android:textSize="16sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security Tips"
                        android:textColor="#1F2937"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Tips List -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢  Use a unique password that you don't use anywhere else"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢  Avoid using personal information in your password"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢  Consider using a password manager"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢  Change your password regularly"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢  Never share your password with anyone"
                    android:textColor="#6B7280"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
