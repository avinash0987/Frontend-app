<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".AddProfileActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back_dark"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Profile"
                    android:textSize="20sp"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="your profile information"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit"
                android:padding="6dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

    </LinearLayout>

    <!-- Scrollable Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Profile Picture -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/card_white_rounded"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Picture"
                    android:textSize="16sp"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="start" />

                <FrameLayout
                    android:id="@+id/profileImageContainer"
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <ImageView
                        android:id="@+id/ivProfileImage"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:background="@drawable/circle_light_blue" />

                    <TextView
                        android:id="@+id/tvProfileInitials"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="ðŸ‘¤"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:background="@drawable/circle_light_blue" />

                    <!-- Camera Overlay -->
                    <FrameLayout
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/circle_blue_small">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_camera_overlay"
                            android:contentDescription="Change photo" />
                    </FrameLayout>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to add photo"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Basic Information Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_white_rounded"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:textSize="16sp"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="20dp" />

                <!-- Full Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_rounded_border"
                    android:hint="Enter your full name"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="16dp" />

                <!-- Date of Birth -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etDateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_rounded_border"
                    android:hint="Tap to select your birth date"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableEnd="@drawable/ic_calendar_small"
                    android:drawablePadding="8dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="16dp" />

                <!-- Gender -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etGender"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_rounded_border"
                    android:hint="Tap to select gender"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableEnd="@drawable/ic_dropdown"
                    android:drawablePadding="8dp"
                    android:focusable="false"
                    android:clickable="true" />

            </LinearLayout>

            <!-- Contact Information Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_white_rounded"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Information"
                    android:textSize="16sp"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="20dp" />

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_rounded_border"
                    android:hint="your.email@example.com"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginBottom="16dp" />

                <!-- Phone Number -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_rounded_border"
                    android:hint="+1 (555) 000-0000"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="phone" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#4B5563"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/button_outline_rounded"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Save Changes"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/button_primary_rounded"
            android:layout_marginStart="10dp" />

    </LinearLayout>

</LinearLayout>
