<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".AgeVisionActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_arrow_back_dark"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age &amp; Vision Details"
                    android:textSize="20sp"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage your age and vision information"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Scrollable Form Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Hero Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:background="@drawable/card_white_rounded"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/ic_glasses"
                    android:background="@drawable/circle_light_blue"
                    android:padding="18dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age &amp; Vision Details"
                    android:textSize="18sp"
                    android:textColor="#1F2937"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage your age and vision information"
                    android:textSize="13sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Age Information Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_white_rounded"
                android:padding="20dp"
                android:layout_marginBottom="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_calendar"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age Information"
                        android:textSize="16sp"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Your Age -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Age"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etAge"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_rounded_border"
                    android:hint="Enter your age (e.g., 25)"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:inputType="number" />

            </LinearLayout>

            <!-- Vision Correction Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_white_rounded"
                android:padding="20dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_eye_vision"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vision Correction"
                        android:textSize="16sp"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Do you wear glasses? -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Do you wear glasses or contact lenses?"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etWearGlasses"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_rounded_border"
                    android:hint="Tap to select an option"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableEnd="@drawable/ic_dropdown"
                    android:drawablePadding="8dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="16dp" />

                <!-- Last Eye Examination -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Eye Examination"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etLastExam"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_rounded_border"
                    android:hint="Tap to select exam date"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableEnd="@drawable/ic_calendar_small"
                    android:drawablePadding="8dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="16dp" />

                <!-- Right Eye Examination -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right Eye Examination"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etRightExam"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_rounded_border"
                    android:hint="Tap to select exam date"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableEnd="@drawable/ic_calendar_small"
                    android:drawablePadding="8dp"
                    android:focusable="false"
                    android:clickable="true" />

            </LinearLayout>

            <!-- Eye Condition Card (NEW) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_white_rounded"
                android:padding="20dp"
                android:layout_marginTop="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_eye_vision"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eye Condition"
                        android:textSize="16sp"
                        android:textColor="#1F2937"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select your known vision status. Choose 'Don\'t know' if you\'ve never been tested."
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginBottom="16dp" />

                <!-- Right Eye Condition -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Right Eye Condition"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etRightEyeCondition"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_rounded_border"
                    android:hint="Tap to select condition"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableEnd="@drawable/ic_dropdown"
                    android:drawablePadding="8dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:layout_marginBottom="16dp" />

                <!-- Left Eye Condition -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left Eye Condition"
                    android:textSize="13sp"
                    android:textColor="#4B5563"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etLeftEyeCondition"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edittext_rounded_border"
                    android:hint="Tap to select condition"
                    android:textColorHint="#9CA3AF"
                    android:textColor="#1F2937"
                    android:textSize="15sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableEnd="@drawable/ic_dropdown"
                    android:drawablePadding="8dp"
                    android:focusable="false"
                    android:clickable="true" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="#4B5563"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/button_outline_rounded"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/button_primary_rounded"
            android:layout_marginStart="10dp" />

    </LinearLayout>

</LinearLayout>
